<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<AnchorPane fx:id="storeAnchorPane" minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.esgi.projet.softwareneedsyou.controllers.StoreController">
   <children>
      <SplitPane dividerPositions="0.5" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="35.0">
         <items>
            <TableView fx:id="pluginsTableView" onMouseClicked="#handleOnRowClickAction" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="idTableColumn" maxWidth="-Infinity" minWidth="30.0" prefWidth="-1.0" text="id" />
                <TableColumn fx:id="nameTableColumn" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="150.0" text="name" />
                  <TableColumn fx:id="typeTableColumn" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="100.0" text="type" />
              </columns>
            </TableView>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox prefHeight="30.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="downloadButton" maxHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" text="Telecharger" visible="false">
                           <HBox.margin>
                              <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                           </HBox.margin></Button>
                        <Label fx:id="pluginNameText" maxHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0">
                           <font>
                              <Font size="14.0" />
                           </font></Label>
                     </children>
                  </HBox>
                  <WebView fx:id="pluginDescriptionWebView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </items></SplitPane>
      <ButtonBar maxHeight="-Infinity" minHeight="-Infinity" nodeOrientation="RIGHT_TO_LEFT" prefHeight="30.0" prefWidth="200.0" AnchorPane.leftAnchor="2.0" AnchorPane.rightAnchor="2.0" AnchorPane.topAnchor="2.0">
        <buttons>
            <Button mnemonicParsing="false" onAction="#handleRefreshAction" text="Rafraichir" />
        </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
